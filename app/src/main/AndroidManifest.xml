<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coffe.android.aboutcoffee">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/coffee_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.coffe.android.aboutcoffee.CoffeeType"
            android:label="@string/coffee_type"
            android:parentActivityName="com.coffe.android.aboutcoffee.MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coffe.android.aboutcoffee.MainMenuActivity" />
        </activity>

        <activity
            android:name="com.coffe.android.aboutcoffee.CoffeeAndTheEnvironment"
            android:label="@string/title_activity_coffee_and_the_environment"
            android:parentActivityName="com.coffe.android.aboutcoffee.MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coffe.android.aboutcoffee.MainMenuActivity" />
        </activity>

        <activity
            android:name="com.coffe.android.aboutcoffee.CoffeeProductionAndLabor"
            android:label="Coffee Production And Labor"
            android:parentActivityName="com.coffe.android.aboutcoffee.MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coffe.android.aboutcoffee.MainMenuActivity" />
        </activity>

        <activity
            android:name="com.coffe.android.aboutcoffee.CoffeeInTheGlobalEconomy"
            android:label="Coffee In The Global Economy"
            android:parentActivityName="com.coffe.android.aboutcoffee.MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coffe.android.aboutcoffee.MainMenuActivity" />
        </activity>
    </application>

</manifest>
