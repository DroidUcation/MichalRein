<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">

    </style>

        <style name="list_header_style">
        <item name="android:textSize">@dimen/thirtytwo</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:layout_gravity">center_horizontal</item>

    </style>

    <style name="list_style">
        <item name="android:textSize">@dimen/twenty</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="body_text_style">
        <item name="android:textSize">@dimen/fifteen</item>
        <item name="android:layout_marginLeft">@dimen/eight</item>
        <item name="android:layout_marginRight">@dimen/eight</item>
        <item name="android:layout_marginTop">@dimen/eight</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>


    <style name="content_header_style">
        <item name="android:textSize">@dimen/twentyfour2</item>
        <item name="android:paddingLeft">@dimen/eight</item>
        <item name="android:paddingRight">@dimen/eight</item>
        <item name="android:paddingTop">@dimen/eight</item>
        <item name="android:paddingBottom">@dimen/twentyfour1</item>
        <item name="android:layout_marginBottom">@dimen/eight</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="small_button_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">@dimen/eight</item>
    </style>

</resources>